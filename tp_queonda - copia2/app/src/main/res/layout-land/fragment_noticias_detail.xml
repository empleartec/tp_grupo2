<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro">

    <ScrollView
        android:id="@+id/scroll_land_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView_titulo"
        android:layout_marginTop="3dp" />

    <ProgressBar
        android:padding="40dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/pb_foto_det_activ"
        android:layout_width="150dp"
        android:layout_height="150dp" />


    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/mundo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView_foto"
      />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_seleccionar_noticia"
        android:id="@+id/textView_fecha"
     />

    <TextView
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView_descripcion"
         />

    <Button
        android:visibility="gone"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/btn_navegador"
        android:textSize="10dp"
        android:id="@+id/button_ver_navegador"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
    </ScrollView>
</LinearLayout>